<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Lista de Usuarios</title>
  <link rel="stylesheet" href="/css/estilos.css" />
</head>
<body>
  <div class="container">
    <h1>Lista de Usuarios</h1>
    <img src="/img/1.jpg" alt="Imagen descriptiva" style="max-width: 100%; height: auto; border-radius: 12px; margin-bottom: 20px;" />

    <table border="1" cellpadding="5" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <a href="/edit/<%= user.id %>">Editar</a> |
              <a href="/delete/<%= user.id %>" onclick="return confirm('Â¿Seguro que quieres eliminar este usuario?');">Eliminar</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <h2>Agregar Usuario</h2>
    <form action="/add" method="post">
      <label for="name">Nombre:</label>
      <input type="text" id="name" name="name" maxlength="45" required placeholder="Ingresa el nombre" />
      <br /><br />
      <label for="email">Correo:</label>
      <input type="email" id="email" name="email" maxlength="45" required placeholder="Ingresa el correo" />
      <br /><br />
      <button type="submit">Agregar</button>
    </form>
  </div>
</body>
</html>
